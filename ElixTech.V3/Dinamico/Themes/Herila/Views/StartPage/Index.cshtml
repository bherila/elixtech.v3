@model Dinamico.Models.StartPage

@section main {
    <!-- Body area -->
    <div class="row" style="overflow: hidden; position: relative;">
        <div class="col-xs-1">&nbsp;</div>
        <div class="col-xs-5">
            <div class="mgleft">
                @{ Html.DroppableZone("AboveContent").Render(); }
                <div class="entry-content">
	                @Content.Display.Text
                </div>
                @{ Html.DroppableZone("BelowContent").Render(); }
            </div>
        </div>
        <div class="col-xs-5">
            <div class="mgright">@{ Html.DroppableZone("BesideContent").Render(); }</div>
        </div>
		<div class="col-xs-1">&nbsp;</div>
    </div>
    
    <!-- Footer -->
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            <div class="mgleft footer">
                <footer>
					@{ Html.RenderPartial("LayoutPartials/Footer"); }
				</footer>
            </div>
        </div>
    </div>
}