@model Dinamico.Models.ContentPart
@{ Content.Define(re =>
	   {
		   re.Title = "2 Columns";
		   re.IconUrl = "{IconsUrl}/text_columns.png";
		   re.CheckBox("Separator", "Show separator");
	   });
}
<section id="fluidGridSystem">
	<div class="container" style="padding: 0;">
		<div class="row show-grid columns twocolumns clearfix @((bool)(Content.Data.Separator ?? false) ? "separator" : "")">
			<div class="column column1 col-md-6">
				@{ Html.DroppableZone("Left").Render(); }
			</div>
			<div class="column column2 col-md-6">
				@{ Html.DroppableZone("Right").Render(); }
			</div>
		</div>
	</div>
</section>
